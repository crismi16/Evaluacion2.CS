@model Evaluacion2.Models.Dog

<div class="container mt-4">
    <h1 class="text-center mb-4 display-4 text-primary">Detalles de perro</h1>
    <div class="row">
        <div class="col-md-4 d-flex align-items-center justify-content-center">
            <img src="@Model.Url" alt="" class="img-fluid rounded shadow" style="height: 300px; object-fit: contain; background-color: #f0f8ff;">
        </div>
        <div class="col-md-4">
            <div class="card shadow border-info mb-3">
                <div class="card-body">
                    <h5 class="card-title text-info">Información General</h5>
                    <p class="card-text">
                        <strong>Altura:</strong> @Model.Height, <strong>Ancho:</strong> @Model.Width
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div style="height: 70px"></div>
</div>
